<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:orientation="vertical"
                                             android:id="@+id/video_view_holder"
>

    <TextView
            android:text="das"
            android:layout_height="wrap_content" android:id="@+id/title_video_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_width="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_video_text_view"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@android:color/darker_gray"/>
    <ImageView
            android:layout_width="411dp"
            android:layout_height="160dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/thumbnail_video_image_view"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/title_video_text_view"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_progress_bar"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@+id/thumbnail_video_image_view"
            app:layout_constraintEnd_toEndOf="@+id/thumbnail_video_image_view" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail_video_image_view"
            app:layout_constraintStart_toStartOf="@+id/thumbnail_video_image_view"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/play_image_button"
            app:layout_constraintEnd_toEndOf="@+id/thumbnail_video_image_view"
            app:layout_constraintStart_toStartOf="@+id/thumbnail_video_image_view"
            app:layout_constraintTop_toTopOf="@+id/thumbnail_video_image_view" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail_video_image_view" android:visibility="visible"
    />
</android.support.constraint.ConstraintLayout>